@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6 text-primary">
            <h2>Category</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary ">
                <i class="bi bi-patch-plus"> &nbsp; Create New Category</i>
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
     <tr>
        <th>Category Name</th>
        <th>Display Order</th>
        <th></th>
        <th></th>
     </tr>
     <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="50%">
                    @obj.Name
                    </td>
                <td width="30%">
                    @obj.Display
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary p-2"><i class="bi bi-pencil">Edit</i></a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger p-2"><i class="bi bi-trash3">Delete</i></a>
                    </div>
                </td>
                </tr>
            }
        </tbody>
    </thead>
</table>